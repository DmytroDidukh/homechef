rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /categories/{documents=**} {
      allow read: if true
      allow write: if request.auth != null
    }
    match /users/{userId} {
      allow read: if true
      allow write: if request.auth != null && request.auth.uid == userId
    }
  }
}
